{
    "require": {
        "league/period": "^4.1",
        "php" : ">=7.1.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "phpunit/phpunit" : "^7.5",
        "phpstan/phpstan": "^0.10.1",
        "phpstan/phpstan-strict-rules": "^0.10.0",
        "phpstan/phpstan-phpunit": "^0.10.0"
    },
    "autoload": {
    	"psr-4": {
    		"Bakame\\Period\\Visualizer\\" : "src"
    	}
    },
    "autoload-dev": {
        "psr-4": {
            "BakameTest\\Period\\Visualizer\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "php-cs-fixer fix -v --diff --dry-run --allow-risky=yes;",
        "phpstan-src": "phpstan analyse -l max -c phpstan.src.neon src",
        "phpstan-tests": "phpstan analyse -l max -c phpstan.tests.neon tests",
        "phpstan": [
            "@phpstan-src",
            "@phpstan-tests"
        ],
        "phpunit": "phpunit --coverage-text",
        "test": [
            "@phpstan-src",
            "@phpstan-tests",
            "@phpcs",
            "@phpunit"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
